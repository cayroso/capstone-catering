@page
@model catering.web.Pages.Home.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="row" ng-controller="indexController as $ctrl">
    <div class="col-sm-6">
        <div class="jumbotron pb-3">
            <h1 class="display-4">Welcome</h1>
            <p class="lead">
                Planning a Birthday, Wedding, or just a Celebration?
                Take the stress out of the occasion by treating your family and friends
                To our hand prepared catering packages.

            </p>
            <hr class="my-4">
            @*<p>A delicious feast custom prepared to your needs.</p>*@
            @*<a class="btn btn-primary btn-lg" href="@Url.Content("~/")Reservations" role="button">Book Now!</a>
                <hr />*@
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (var i = 0; i < Model.Images.Count; i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                        }
                    }
                    @*<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>*@
                </ol>
                <div class="carousel-inner">

                    @for (var n = 0; n < Model.Images.Count; n++)
                    {
                        var item = Model.Images[n];

                        if (n == 0)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@item.ImageUrl" style="height:500px;" alt="@item.Name">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@item.ImageUrl" style="height:500px;" alt="@item.Name">
                            </div>
                        }

                    }

                    @*<div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/img_1.jpg" style="width:200px;height" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/img_2.jpg" style="width:300px;height:200px;" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 img-fluid" src="~/images/img_3.jpg" style="width:200px;" alt="Third slide">
                        </div>*@
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        @*<button ng-click="$main.Ok()">Ok</button>*@

    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <div id="calendar"></div>
            </div>
        </div>
    </div>

</div>

