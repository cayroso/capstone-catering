@page
@model catering.web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";

}

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <div class="card shadow">
            <div class="card-header">
                <h5>Login to EC Catering Services Web Application</h5>
            </div>
            <div class="card-body">
                <form method="post" action="~/Account/Login">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control">
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                        <a href="~/" class="btn btn-default">Cancel</a>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <h6>No Account yet? Register <a href="@Url.Content("~/Account/Register")">here</a></h6>
                <h6>Forgot your password? Click <a href="@Url.Content("~/")account/forgotpassword">here</a>.</h6>
            </div>

        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header">
                <b>Test Credentials</b>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered mb-0">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usr in Model.Users)
                        {
                            <tr>
                                <td>
                                    @usr.UserName
                                </td>
                                <td>
                                    @usr.Password
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        
    </div>
</div>



